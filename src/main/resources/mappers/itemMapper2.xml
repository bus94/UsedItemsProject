<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.ss.useditems.mapper.ItemMapper2">

	<select id="getNew5" resultType="itemInfoDTO">
		SELECT
		*
		FROM
		(
		SELECT
		i.*,
		s.show_thumb,
		s.show_img1,
		s.show_img2,
		s.show_img3,
		s.show_img4,
		s.show_img5
		FROM
		(
		SELECT
		item.*,
		COUNT(repl_index) repl_count
		FROM
		item
		LEFT
		JOIN reply ON repl_item = item_index
		GROUP BY
		item_index,
		item_seller,
		item_title,
		item_content,
		item_category,
		item_price,
		item_place,
		item_status,
		item_enrolldate,
		item_click,
		item_interest,
		item_offdate,
		item_buyer
		) i
		LEFT JOIN showcase s ON show_item =
		item_index
		WHERE
		item_status = 'onsale'
		ORDER BY
		item_index DESC,
		item_enrolldate DESC
		)
		WHERE
		ROWNUM &lt;= 10
	</select>

	<select id="getHot5" resultType="itemInfoDTO">
		SELECT
		*
		FROM
		(
		SELECT
		*
		FROM
		item
		LEFT
		JOIN showcase ON show_item = item_index
		WHERE
		item_status = 'onsale'
		ORDER BY
		item_interest DESC
		)
		WHERE
		ROWNUM &lt;= 10
	</select>

